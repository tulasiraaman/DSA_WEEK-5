class Solution {
    public long minCost(String s, int[] cost) {
        Map<Character, Long> map = new HashMap<>();
        long totalSum = 0;

        //group char by cost
        for(int i = 0; i < s.length(); i++){
            char c = s.charAt(i);
            map.put(c, map.getOrDefault(c, 0l) + cost[i]);
            totalSum += cost[i]; //add total cost
        }

        //find max cost of grouped char
        long curMax = 0;
        for(long val : map.values()){
            curMax = Math.max(val, curMax);
        }
        
        return totalSum-curMax;
    }
}Â©leetcode
