class Solution {
    public int mySqrt(int x) {
        if(x < 1) return 0;
        int left = 1, right = x, ans = 1;

        while(left < right){
            int mid = left + (right - left)/2;

            if (mid > x / mid) { // Compare mid with x/mid instead of mid*mid(overflow).
                right = mid; // If mid > x/mid or mid*mid > x, shrink right boundary.
            } else {
                ans = mid; // mid^2 <= x â†’ valid candidate
                left = mid + 1; // try bigger numbers
            }
        }
        return ans;
    }
}
